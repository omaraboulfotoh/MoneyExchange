<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="currency"
            type="com.android.moneyexchange.models.Currency" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="@dimen/dimen_16dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etEUR"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:text="1.0"
            android:textSize="@dimen/big_font_size"
            app:layout_constraintEnd_toStartOf="@id/tvEUR"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvEUR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EUR"
            android:textSize="@dimen/normal_font_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/etEUR"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/etEUR" />

        <View
            android:id="@+id/viewDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/dimen_4dp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/etEUR" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etCurrency"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:enabled="false"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:text="@{currency.rateString}"
            android:textSize="@dimen/big_font_size"
            app:layout_constraintEnd_toStartOf="@id/tvCurrency"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewDivider" />

        <TextView
            android:id="@+id/tvCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{currency.code}"
            android:textSize="@dimen/normal_font_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/etCurrency"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/etCurrency"
            tools:text="SAR" />

        <View
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@id/etCurrency" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>